<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:divider">@color/pink_theme_divider</item>

        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>

        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>

    </style>

    <style name="PinkAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/pink_theme_primary</item>
        <item name="colorPrimaryDark">@color/pink_theme_primary_dark</item>
        <item name="colorAccent">@color/pink_theme_accent</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:divider">@color/pink_theme_divider</item>

        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>

        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle.Pink</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#212121</item>
    </style>

    <style name="AppCompatAlertDialogStyle.Pink" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/pink_theme_accent</item>
        <item name="android:textColorPrimary">@color/pink_theme_primary_text</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme.Trans" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 文字展开后的效果 透明-->
    <style name="CollapsingToolbarTitleStyle" parent="Widget.Design.CollapsingToolbar">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="BigTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BigTabLayoutTextAppearanceInverse" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
    </style>


    <style name="LinearLayout" />

    <style name="LinearLayout.Attr">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.Attr" parent="TextView">
        <item name="android:background">@drawable/round_textview</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Nickname" parent="TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>


    <style name="MyItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_dark_item_click</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_not_select</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="Small_Horizontal_Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/md_grey_200</item>
    </style>

    <style name="Mid_Horizontal_Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@color/md_grey_100</item>
    </style>

</resources>
